{
  "name": "pdf-viewer-electron-react",
  "version": "0.1.0",
  "author": "Yagoubi aek atech-info",
  "private": true,
  "main": "public/electron.js",
  "homepage": "./",
  "build": {
    "appId": "com.pdf-viewer-electron-react",
    "directories": {
      "buildResources": "public"
    },
    "win": {
      "icon": "public/logo.png",
      "target": [
        "nsis"
      ]
    },
    "mac": {
      "icon": "public/logo.png"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "deleteAppDataOnUninstall": true,
      "uninstallDisplayName": "pdf-viewer-electron-react",
      "license": "license.txt",
      "language": 1033,
      "displayLanguageSelector": false
    },
    "linux" : {
      "icon": "public/logo-linux.icns",

      "target" :["deb"]

    },
    "productName": "pdf-viewer-electron-react",
    "copyright": "yagoubi abdelkader"
  },
  "dependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "concurrently": "^6.0.2",
    "cross-env": "^7.0.3",
    "electron-is-dev": "^1.1.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3",
    "v8-compile-cache": "^2.1.1",
    "wait-on": "^3.3.0",
    "web-vitals": "^1.0.1"
  },
  "scripts": {
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "react-test": "react-scripts test --env=jsdom",
    "react-eject": "react-scripts eject",
    "electron-build": "electron-builder",
    "release": "yarn react-build && electron-builder  -mwl",
    "release:win" :"yarn react-build && yarn electron-build -p always",
    "release:linux" :"yarn react-build && yarn electron-build -p always",
    "release:mac" :"yarn react-build && yarn electron-build -p always",
    "build": "yarn react-build && yarn electron-build",
    "start": "concurrently \"cross-env BROWSER=none yarn react-start\" \"wait-on http://localhost:3000 && electron .\""
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "electron": "^12.0.2",
    "electron-builder": "^21.2.0",
    "electron-devtools-installer": "^2.2.4",
    "electron-rebuild": "^1.10.0"
  }
}
